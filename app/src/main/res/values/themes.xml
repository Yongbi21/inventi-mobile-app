<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash screen theme -->
    <style name="Theme.InventiApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.InventiApp</item>
    </style>

    <!-- Base application theme -->
    <style name="Base.Theme.InventiApp" parent="Theme.Material3.DayNight.NoActionBar" />

    <!-- App theme after splash -->
    <style name="Theme.InventiApp" parent="Base.Theme.InventiApp" />

    <!-- Custom text styles -->
    <style name="SignUpTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/proximanova_semi</item>
    </style>

    <style name="ProximaNovaTextStyle">
        <item name="fontFamily">@font/proximanova_semibold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ProximaNovaTextStyle1">
        <item name="fontFamily">@font/proximanova_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ProximaNovaTextStyle1Bold">
        <item name="fontFamily">@font/proximanova_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ProximaNovaTextStyleNormal">
        <item name="fontFamily">@font/proximanova_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
